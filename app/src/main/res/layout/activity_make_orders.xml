<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeOrders"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border2"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:text="Invoice No."
                            android:layout_gravity="center"
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_invoiceNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="//invoNo//"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border2"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:text="   Invoice Date   "
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txt_invoiceDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="//invoDate//"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/spinner_description"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:contentDescription="Choose Description"
                        android:hint="Choose Description" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:text="   Description   "
                    android:textColor="@color/textColor"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="5dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_inStock"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textSize="24sp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  In Stock    "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/edit_unitPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="Rs."
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:text="0.00"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Unit Price  "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_weight="1">

                            <EditText
                                android:textAlignment="center"
                                android:id="@+id/edit_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="qty"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                tools:text="0" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Qty   "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/edit_FIssue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:text="0"
                                android:textAlignment="center"
                                tools:text="0" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  F.Issue    "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/edit_exchange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:text="0"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Exchange  "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <TextView
                                android:id="@+id/txt_tot"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="#205072"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Line Total   "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/edit_return"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:text="0"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Return Qty    "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/edit_returnPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:hint="Rs."
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:text="0.00"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Return Price  "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_returnValue"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="24sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text="  Return Value   "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_preBal"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Pre Balance "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_invoiceTot"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Invoice Total "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_returnDeduct"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Return Deduct "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_totCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textColor="#205072"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Total Credit  "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/edit_cashReceipts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:hint="Rs."
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:text="0.00"
                                android:textAlignment="center"
                                tools:text="0.00" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Cash Receipts "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/txt_netBal"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textSize="24sp"
                                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#ffffff"
                            android:text=" Net Balance  "
                            android:textColor="@color/textColor"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="117dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Cancel"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="117dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Add"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="117dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Preview"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>


                </LinearLayout>



            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>


</ScrollView>